pipeline {
    agent any

    environment {
        EC2_USER = "ubuntu"
        EC2_HOST = "13.56.156.208"        // Replace with your EC2 public IP
        SSH_KEY  = "/var/lib/jenkins/.ssh/FC-key.pem"
        WEB_ROOT = "/var/www/html"
        REPO_URL = "https://github.com/Pramod581/static-website-project.git"
    }

    triggers {
        githubPush()
    }

    stages {

        stage('Checkout Code in Jenkins') {
            steps {
                echo "ðŸ”¹ Pulling latest code in Jenkins workspace..."
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Deploy to EC2') {
            steps {
                echo "ðŸ”¹ Deploying website to EC2..."
                sh """
                ssh -o StrictHostKeyChecking=no -i $SSH_KEY $EC2_USER@$EC2_HOST << EOF
                    set -e

                    # Make Git safe
                    git config --global --add safe.directory $WEB_ROOT

                    # Pull latest code if repo exists, else clone fresh
                    if [ -d "$WEB_ROOT/.git" ]; then
                        cd $WEB_ROOT
                        sudo git reset --hard
                        sudo git pull
                    else
                        sudo rm -rf $WEB_ROOT/*
                        sudo git clone ${REPO_URL} $WEB_ROOT
                    fi

                    # Set proper permissions
                    sudo chown -R www-data:www-data $WEB_ROOT
                    sudo chmod -R 755 $WEB_ROOT

                    # Restart Nginx
                    sudo systemctl restart nginx
EOF
                """
            }
        }
    }

    post {
        success {
            echo "âœ… Deployment successful!"
        }
        failure {
            echo "âŒ Deployment failed. Check console output."
        }
    }
}

